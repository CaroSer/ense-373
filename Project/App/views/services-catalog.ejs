<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medilocate - Services</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="../public/styles.css">
  <!-- Bootstrap and jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Custom JS -->
  <script src="../public/services-catalog.js"></script>
</head>

<body>
  <!-- Header Section -->
  <nav class="navbar navbar-light bg-light border-bottom">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="../public/img/logo.png" alt="Medilocate Logo" class="logo">
      </a>
      <div class="d-flex align-items-center">
      </div>
    </div>
  </nav>

  <!-- Main container with Sidebar and Content -->
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar" style="
      min-height: 100vh; background-color: rgba(136, 161, 181, 0.097) !important; ">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">

            <li class="nav-item">
              <a class="nav-link" href="/services-catalog">
                Services Catalog
              </a>
            </li>

            <% if (user.role==='MedicalProvider' ) { %>
              <li class="nav-item">
                <a class="nav-link" href="/services-offered">
                  Services Offered
                </a>
              </li>
              <% } %>

                <li class="nav-item">
                  <a class="nav-link" href="/appointments">
                    Appointments
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/profile">
                    Profile
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/">
                    Logout
                  </a>
                </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content Area -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Services Catalog</h1>
        </div>

        <!-- Search and Filter -->
        <div class="row mb-4">
          <div class="col-md-4">
            <input type="text" class="form-control" id="search-bar" placeholder="Search services">
          </div>

        </div>



        <!-- Service Cards -->
        <div class="row row-cols-1 row-cols-md-3 g-4" id="services-container">

        </div>
      </main>
    </div>
  </div>

  <!-- Modal for Booking an Appointment -->
  <div class="modal fade" id="bookAppointmentModal" tabindex="-1" aria-labelledby="bookAppointmentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="appointment">Book Appointment</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="book-appointment-form">
            <div class="mb-3" hidden>
              <label for="appointment-service-name" class="form-label">Service</label>
              <input type="text" class="form-control" id="" readonly>
            </div>



            <div class="mb-3">
              <label for="appointment-date" class="form-label">Date</label>
              <input type="datetime-local" class="form-control" id="appointment-date" required>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Book Appointment</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>




</body>

</html>